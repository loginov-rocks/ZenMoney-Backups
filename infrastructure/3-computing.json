                  ],
                  "Effect": "Allow",
                  "Resource": [
                    {
                      "Fn::ImportValue": {
                        "Fn::Sub": "${PersistentStackName}-BackupsBucketArn"
                      }
                    },
                    {
                      "Fn::Sub": [
                        "${BackupsBucketArn}/*",
                        {
                          "BackupsBucketArn": {
                            "Fn::ImportValue": {
                              "Fn::Sub": "${PersistentStackName}-BackupsBucketArn"
                            }
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            "PolicyName": "CustomPolicy"
          }
        ],
